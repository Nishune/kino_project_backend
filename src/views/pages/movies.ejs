<section class="movies-section">
  <h2 class="allMovies-headline">Våra filmer</h2>
  <div class="movie-container">
    <%# Loops through the movies array from the API response in movies route, creates movie-card with img,title & link %>
    <% movies.forEach(movie => { %>
      <div class="movie-card">
        <a href="/movies/<%= movie.id %>">
          <div class="movie-image-container">
            <img class="movie-image" src="<%= movie.attributes.image.url %>" alt="Bild för <%= movie.attributes.title %>">
          </div>
          <div class="movie-info">
            <h2 class="movie-title"><%= movie.attributes.title %></h2>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</section>