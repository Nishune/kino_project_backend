    <div class="movie-card">
      <a href="/movies/<%= movie.id %>">
        <div class="movie-image-container">
          <img class="movie-image" src="<%= movie.attributes.image.url %>" alt="Bild f√∂r <%= movie.attributes.title %>">
        </div>
        <div class="movie-info">
